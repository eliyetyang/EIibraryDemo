<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.library.yang.eliyet.eliyetlibrarydemo.SlidingTabWithPagerDemo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/sliding_tab_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="title index"
            android:inputType="number" />

        <EditText
            android:id="@+id/sliding_tab_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="new title" />

        <Button
            android:id="@+id/sliding_tab_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="change" />
    </LinearLayout>

    <com.library.yang.eliyet.elibrary.widget.SlidingTabLayout
        android:id="@+id/sliding_tab_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#444444" />

    <android.support.v4.view.ViewPager
        android:id="@+id/sliding_tab_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
</LinearLayout>
